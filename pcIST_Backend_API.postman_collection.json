            }
          },
          "response": []
        },
        {
          "name": "Get Single Event",
          "request": {
            "method": "GET",
            "url": {
              "raw": "{{baseUrl}}/api/events/get_one_event/:eventId",
              "host": ["{{baseUrl}}"],
              "path": ["api", "events", "get_one_event", ":eventId"],
              "variable": [
                {
                  "key": "eventId",
                  "value": "EVENT_ID_HERE"
                }
              ]
            }
          },
          "response": []
