              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"membership\": true,\n  \"durationInMonths\": 3\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/api/users/membership/:userId",
              "host": ["{{baseUrl}}"],
              "path": ["api", "users", "membership", ":userId"],
              "variable": [
                {
                  "key": "userId",
                  "value": "USER_ID_HERE"
                }
              ]
            }
          },
          "response": []
        }
      ]
    },
    {
      "name": "Events",
      "item": [
        {
          "name": "Get All Events",
          "request": {
            "method": "GET",
