        {
          "name": "Create Event (Admin)",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{adminToken}}"
              }
            ],
            "body": {
              "mode": "formdata",
              "formdata": [
                {
                  "key": "eventName",
                  "value": "Programming Contest",
                  "type": "text"
                },
                {
                  "key": "eventType",
                  "value": "solo",
                  "type": "text"
                },
                {
                  "key": "date",
                  "value": "2024-12-31T10:00:00.000Z",
                  "type": "text"
                },
                {
                  "key": "registrationDeadline",
                  "value": "2024-12-25T23:59:59.999Z",
                  "type": "text"
                },
                {
                  "key": "location",
                  "value": "Main Auditorium",
                  "type": "text"
                },
                {
                  "key": "description",
                  "value": "Annual programming contest",
                  "type": "text"
                },
                {
                  "key": "needMembership",
                  "value": "true",
                  "type": "text"
                },
                {
                  "key": "images",
                  "type": "file",
                  "src": []
                }
              ]
            },
            "url": {
              "raw": "{{baseUrl}}/api/events/add_event",
              "host": ["{{baseUrl}}"],
              "path": ["api", "events", "add_event"]
            }
          },
          "response": []
